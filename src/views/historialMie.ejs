<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../css/output.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="../img/MxLogoV2.ico" type="image/x-icon">
    <title>ClubEnduro | Miembros</title>
</head>
<body>
    <header class="sticky top-0 z-50 bg-white shadow-md">
        <nav class="flex justify-between items-center p-4">
            <!-- Logo -->
            <div class="flex items-center space-x-2">
                <img src="../img/MxLogoV2.png" alt="ClubEnduro" class="w-12 h-12 sm:w-15 sm:h-15 md:w-17 md:h-17">
                <h1 class="font-bold italic text-2xl sm:text-3xl md:text-4xl text-gray-600">ClubEnduro</h1>
            </div>

            <!-- Menú para desktop (visible desde md) -->
            <div class="hidden md:flex items-center space-x-8 mr-8">
                <ul class="flex space-x-6 text-blue-600 font-medium">
                    <li class="hover:scale-110 transition-transform duration-300"><a href="<%= link %>"
                            class="text-base lg:text-lg xl:text-xl">Inicio</a></li>
                    <li class="hover:scale-110 transition-transform duration-300"><a href="<%= link %>#formulario-pago"
                            class="text-base lg:text-lg xl:text-xl">Registrar pagos</a></li>
                    <li class="hover:scale-110 transition-transform duration-300"><a href="<%= link %>contacto"
                            class="text-base lg:text-lg xl:text-xl">Contacto</a></li>
                </ul>

                <!-- Contenedor del perfil con menú desplegable -->
                <div class="relative">
                    <button id="user-menu-button" class="flex flex-col items-center focus:outline-none">
                        <img src="../img/MxLogo.png" alt="Logo perfil"
                            class="w-10 h-10 sm:w-12 sm:h-12 bg-slate-200 rounded-full p-1 object-cover hover:scale-110 transition-transform duration-300 border-2 border-blue-300 shadow-lg">
                    </button>

                    <!-- Menú desplegable (oculto por defecto) -->
                    <div id="user-menu"
                        class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
                        <% if (user) { %>
                            <span class="block px-4 py-2 text-sm text-gray-700 font-semibold">
                                Usuario: <%= user.nombre %>
                            </span>
                            <div class="border-t border-gray-200"></div>
                            <a href="<%= link %>profile"
                                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mi Perfil</a>
                            <a href="<%= link %>historial" 
                                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Movimientos</a>
                            <a href="<%= link %>logout"
                                class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Cerrar Sesión</a>
                            <% } else { %>
                                <a href="<%= link %>log_in"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Iniciar Sesión</a>
                                <a href="<%= link %>sign_in"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Registrarse</a>
                                <% } %>
                    </div>
                </div>
            </div>

            <!-- Botón hamburguesa para mobile (visible hasta md) -->
            <div class="flex md:hidden items-center space-x-4">
                <!-- Botón del menú de usuario en mobile -->
                <button id="mobile-user-menu-button" class="focus:outline-none">
                    <img src="../img/MxLogo.png" alt="Logo perfil"
                        class="w-10 h-10 bg-slate-200 rounded-full p-1 object-cover border-2 border-blue-300 shadow-lg">
                </button>

                <button id="mobile-menu-button" class="text-gray-600 focus:outline-none">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </nav>

        <!-- Menú móvil desplegable -->
        <div class="md:hidden hidden bg-white px-4 pb-4" id="mobile-menu">
            <ul class="flex flex-col space-y-3 text-blue-600 font-medium">
                <li><a href="<%= link %>" class="block py-2 hover:bg-gray-100 rounded px-2">Inicio</a></li>
                <li><a href="<%= link %>#formulario-pago" class="block py-2 hover:bg-gray-100 rounded px-2">Registrar
                        pagos</a>
                </li>
                <li><a href="<%= link %>contacto" class="block py-2 hover:bg-gray-100 rounded px-2">Contacto</a></li>
            </ul>

            <!-- Opciones de usuario en mobile -->
            <div id="mobile-user-menu" class="hidden mt-4 border-t pt-4">
                <a href="<%= link %>log_in" class="block py-2 text-blue-600 hover:bg-gray-100 rounded px-2">Iniciar
                    Sesión</a>
                <a href="<%= link %>sign_in"
                    class="block py-2 text-blue-600 hover:bg-gray-100 rounded px-2">Registrarse</a>
                <div class="border-t my-2"></div>
                <a href="<%= link %>profile" class="block py-2 text-blue-600 hover:bg-gray-100 rounded px-2">Mi
                    Perfil</a>
                    <a href="<%= link %>historial" class="block px-2 py-2 text-sm text-blue-600 hover:bg-gray-100">
                    Movimientos</a>
                <a href="<%= link %>logout" class="block py-2 text-blue-600 hover:bg-gray-100 rounded px-2">Cerrar
                    Sesión</a>
            </div>
        </div>
    </header>

    
    <!-- Contenido principal -->
    <main class="flex-grow container mx-auto px-4 py-8 max-w-7xl">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Administracion de miembros</h1>
            <p class="text-gray-600">Administra todos los miembros en el sistema</p>
        </div>

        <!-- Filtros y búsqueda -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
            <div class="flex flex-col md:flex-row justify-between gap-4">
                <div class="relative flex-grow max-w-lg">
                    <input 
                        type="text" 
                        placeholder="Buscar por nombre y apellido, usuario..." 
                        class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                    >
                    <i class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
                
                <div class="flex flex-wrap gap-2">
                    <button class="filter-btn bg-blue-800 text-white px-4 py-2 rounded-lg border border-blue-800 text-sm font-medium transition">Todos</button>
                    <button class="filter-btn px-4 py-2 rounded-lg border border-gray-300 text-sm font-medium hover:bg-gray-50 transition">Pendientes</button>
                    <button class="filter-btn px-4 py-2 rounded-lg border border-gray-300 text-sm font-medium hover:bg-gray-50 transition">Aprobados</button>
                    <button class="filter-btn px-4 py-2 rounded-lg border border-gray-300 text-sm font-medium hover:bg-gray-50 transition">Rechazados</button>
                </div>
            </div>
        </div>

        <!-- Tabla de movimientos -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="overflow-y-auto max-h-[500px]">
                <table class="w-full">
                    <thead class="bg-gray-100 sticky top-0">
                        <tr class="text-left text-gray-600 font-medium">
                            <th class="py-4 px-6">Usuario</th>
                            <th class="py-4 px-6">Tipo</th>                            
                            <th class="py-4 px-6">Fecha/Hora de registro</th>                    
                            <th class="py-4 px-6">Estado</th>
                            <th class="py-4 px-6 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% miembros.forEach(miembro => { %>
                        <tr class="transition duration-200 hover:bg-gray-100 hover:-translate-y-px hover:shadow-sm">
                            <td class="py-4 px-6">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-user text-blue-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium"><%= miembro.NomApe %></p>
                                        <p class="text-gray-500 text-sm"><%= miembro.MailUsu %> - <%= miembro.NomUsu %></p>
                                    </div>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="<%= miembro.TipUsu === 'A' ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %> px-3 py-1 rounded-full text-xs font-medium">
                                    <%= miembro.TipUsu === 'A' ? 'Administrador' : 'Común' %>
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <p><%= miembro.NewFecReg %></p>
                                <p class="text-gray-500 text-sm"><%= miembro.NewHoraReg %></p>
                            </td>                   
                            <td class="py-4 px-6">
                                <% let estadoClase, estadoTexto;
                                switch(miembro.StsUsu) {
                                    case 'A': 
                                        estadoClase = "bg-green-100 text-green-800";
                                        estadoTexto = "Aprobado";
                                        break;
                                    case 'R': 
                                        estadoClase = "bg-red-100 text-red-800";
                                        estadoTexto = "Rechazado";
                                        break;
                                    default: 
                                        estadoClase = "bg-yellow-100 text-yellow-800";
                                        estadoTexto = "Pendiente";
                                } %>
                                <span class="px-3 py-1 rounded-full text-xs font-semibold <%= estadoClase %>">
                                    <%= estadoTexto %>
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex justify-center space-x-2">
                                    <% if (miembro.StsUsu === 'P') { %>
                                        <button 
                                            onclick="actualizarEstado(<%= miembro.idMie %>, 'A')" 
                                            class="bg-green-600 hover:bg-green-700 text-white rounded-lg px-4 py-2 transition flex items-center">
                                            <i class="fas fa-check mr-2"></i> Validar
                                        </button>
                                        <button 
                                            onclick="actualizarEstado(<%= miembro.idMie %>, 'R')" 
                                            class="bg-red-600 hover:bg-red-700 text-white rounded-lg px-4 py-2 transition flex items-center">
                                            <i class="fas fa-times mr-2"></i> Rechazar
                                        </button>
                                    <% } else { %>
                                        <button class="bg-gray-300 text-gray-700 rounded-lg px-4 py-2 cursor-not-allowed opacity-50" disabled>
                                            <%= miembro.StsUsu === 'A' ? 'Validado' : 'Rechazado' %>
                                        </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Paginación -->
            <div class="flex flex-col sm:flex-row justify-between items-center px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-700 mb-4 sm:mb-0">
                    Mostrando <span class="font-medium">1</span> a <span class="font-medium">5</span> de <span class="font-medium">24</span> movimientos
                </div>
                <div class="flex space-x-2">
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 bg-gray-50 hover:bg-gray-100">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-blue-600 bg-blue-600 text-white">1</button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 hover:bg-gray-100">2</button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 hover:bg-gray-100">3</button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 hover:bg-gray-100">4</button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 hover:bg-gray-100">5</button>
                    <button class="px-4 py-2 text-sm rounded-lg border border-gray-300 bg-gray-50 hover:bg-gray-100">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white py-8">
        <div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
              <div class="flex items-center space-x-2">
                <img src="../img/MxLogoV2.png" alt="ClubEnduro" class="w-10 h-10">
                <h2 class="font-bold italic text-xl text-white">ClubEnduro</h2>
              </div>
              <p class="mt-2 text-gray-400 text-sm">Comunidad de enduro, hecho con pasion por el enduro</p>
            </div>
    
            <div class="flex space-x-6">
              <a href="#" class="hover:text-blue-400 transition duration-300">
                <span class="sr-only">Facebook</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd"
                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
              <a href="#" class="hover:text-blue-400 transition duration-300">
                <span class="sr-only">Instagram</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd"
                    d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
    
          <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400 text-sm">
            <p>&copy; 2025 ClubEnduro. Todos los derechos reservados.</p>
          </div>
        </div>
    </footer>

    <!-- Scripts de js -->
    <script src="../js/modal.js"></script>
    <script src="../js/filtersBtn.js"></script>
    <script src="../js/actEstado.js"></script>
    <script>
            // Función para actualizar estado (moverla aquí en lugar de archivo externo)
    function actualizarEstado(idMie, StsUsu) {
        fetch('<%= link %>actualizarEstadoMiembro', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({idMie, StsUsu})
        })
        .then(function(response) {
            return response.json();
        })
        .then(function(data) {
            if(data.success) {
                location.reload();
            } else {
                alert('Error: ' + (data.error || 'Error desconocido'));
            }
        })
        .catch(function(error) {
            console.error('Error:', error);
            alert('Error de conexión');
        });
    }
    </script>
</body>
</html>